{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@*": ["./src/*"]
    },
  },
  "include": [
    "vite.config.mjs", 
    "src/server/main.ts",
    "config.ts", 
    "src", 
    "test.ts",
    "globals.d.ts"
  ]
}